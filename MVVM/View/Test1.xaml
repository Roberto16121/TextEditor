<Window x:Class="TextEditor.MVVM.View.Test1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor.MVVM.View"
        mc:Ignorable="d"
        Title="Save" Height="400" Width="600">
    <Grid>
        <Label
            Margin="175,120,50,50"
            FontSize="30"
            Content="Document name : "
            />
        <RichTextBox
            x:Name="NameBox"
            ToolTip="Name here"
            Height="35"
            Width="300"/>
        <Button
            x:Name="SaveConfirm"
            FontSize="25"
            Content="Save"
            Margin="240,200,50,50"
            Height="50"
            Width="100"
            Click="SaveConfirm_Click"
            />
        <Button
            x:Name="CancelConfirm" 
            FontSize="25"
            Content="Cancel"
            Margin="0,200,190,50"
            Height="50"
            Width="100"
            Click="CancelConfirm_Click"
            />
    </Grid>
</Window>
